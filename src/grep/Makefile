#-------------------------------------------------------------------
NAME					:= s21_grep
#------------------------------------------------------------------
UTILITY					:= $(NAME)
#------------------------------------------------------------------
HEADER					:= $(NAME).h
#------------------------------------------------------------------
CC						:= gcc
#------------------------------------------------------------------
CFLAGS					:= -std=c11 -pedantic -Wall -Werror -Wextra
#------------------------------------------------------------------
SRC						:= $(NAME).c
#------------------------------------------------------------------
OBJ						:= $(SRC:.c=.o)
#------------------------------------------------------------------
SINGLE_TEST_FILE		:= test_s21_grep.sh
#------------------------------------------------------------------
FUNCTIONAL_TEST_FILE	:= functional_test_s21_grep.sh
#------------------------------------------------------------------

.PHONY: all s21_grep test lint clean fclean re

all: s21_grep
#------------------------------------------------------------------
s21_grep: $(OBJ)
		$(CC) $(CFLAGS) $(NAME).c -o $(UTILITY)
#------------------------------------------------------------------
%.o: %.c $(HEADER)
		$(CC) $(CFLAGS) -c $< -o $@
#------------------------------------------------------------------
test: $(NAME)
		bash ./$(SINGLE_TEST_FILE)
#------------------------------------------------------------------
func_test: $(NAME)
		bash ./$(FUNCTIONAL_TEST_FILE)
#------------------------------------------------------------------
lint: $(NAME)
		@echo -------------------CLANG-FORMAT-------------------
		clang-format -i $(SRC) $(HEADER)
#------------------------------------------------------------------
check: $(NAME)
		@echo ---------------------CPPCHECK---------------------
		cppcheck --enable=all --suppress=missingIncludeSystem . $(HEADER) $(SRC)
#------------------------------------------------------------------
clean:
		rm -rf $(OBJ) *.log *.file *.txt
#------------------------------------------------------------------
fclean: clean
		rm -rf $(NAME)
#------------------------------------------------------------------
re:
		$(MAKE) fclean
		$(MAKE) all
#------------------------------------------------------------------